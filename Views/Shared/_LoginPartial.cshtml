@using Microsoft.AspNetCore.Identity
@using MVC_APU_FlowerShop2023.Areas.Identity.Data

@inject SignInManager<MVC_APU_FlowerShop2023User> SignInManager
@inject UserManager<MVC_APU_FlowerShop2023User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item">
            <a id="addflower" class="nav-link text-dark" asp-action="Index" asp-controller="Flowers">
                View Flower List
            </a>
        </li>
        <li class="nav-item">
            <a id="addsurvey" class="nav-link text-dark" asp-action="Index" asp-controller="Survey">
                Answer Survey
            </a>
        </li>
    <li class="nav-item">
        <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
